<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="pl.garnek" />

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:props.properties" />
	</bean>

	<bean id="czytaczCfgAbs" abstract="true" >
		<property name="sciezkaBaza" value="${sciezka.baza}" />
	</bean>

	<bean id="czytaczCfgReq" parent="czytaczCfgAbs" class="pl.garnek.logi.reqresp.czas.plik.Czytacz.Konfiguracja">
		<property name="sciezkaRegexp" value="${sciezka.req}" />
	</bean>
	
	<bean id="czytaczCfgResp" parent="czytaczCfgAbs" class="pl.garnek.logi.reqresp.czas.plik.Czytacz.Konfiguracja">
		<property name="sciezkaRegexp" value="${sciezka.resp}" />
	</bean>
	
</beans>